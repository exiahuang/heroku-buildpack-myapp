#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install app"
BUILD_DIR=$1
VENDOR_DIR="vendor"

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
mkdir -p gdrive
cd gdrive
curl -L --silent "https://github.com/gdrive-org/gdrive/releases/download/2.1.0/gdrive-linux-x64"

PROFILE_PATH="$BUILD_DIR/.profile.d/gdrive.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:${HOME}/vendor/gdrive"' >> $PROFILE_PATH
